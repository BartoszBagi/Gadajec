                    <li class="breadcrumb-item active">Nowy pokój</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-10">
            <div class="card card-primary">
